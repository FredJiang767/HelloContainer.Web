@using HelloContainer.WebApp.Extensions
@if (User.Identity!.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item" style="display: flex">
            @await Component.InvokeAsync("UserInfo")
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Sign out</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    </ul>
}

